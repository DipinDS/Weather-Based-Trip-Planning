    .location-card {
        background-color: #ffffff;
        border-radius: 12px;
        transition: transform 0.2s ease-in-out;
    }

    .location-card:hover {
        transform: scale(1.05);
        box-shadow: 0 6px 16px rgba(0, 0, 0, 0.15);
    }

    .card-body {
        padding-top: 10px;
    }

    .card-title {
        color: #333333;
        font-size: 1.25rem;
    }

    .card-text {
        font-size: 0.9rem;
        color: #6c757d;
