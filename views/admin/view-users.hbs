

<div class="container mt-5 border-bottom pb-5">
    <div class="row justify-content-center mb-4">
        <h2 class="text-center font-weight-bold">User Profiles</h2>
    </div>
    <div class="row" id="all-locations">
        {{#each users}}
        <div class="col-lg-3 col-md-4 col-sm-6 mt-4 d-flex justify-content-center">
            <div class="location-card card border-0 shadow-sm p-3" style="width: 100%; max-width: 18rem;">
                <div class="text-center mb-3">
                    <!-- Profile icon or avatar placeholder -->
                    {{!-- <img src="" alt="User Apublic\location-images\Locations\avatharjpg.jpgvatar" class="rounded-circle" width="80" height="80"> --}}
                </div>
                <div class="card-body text-center">
                    <h5 class="card-title font-weight-bold mb-1">{{this.Name}}</h5>
                    <p class="card-text text-muted">{{this.Email}}</p>
                    <p class="card-text text-muted">{{this.Role}}</p>
                    <p class="card-text text-muted">{{this.phone}}</p> <!-- Optional: Display user role or title -->
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>

