    .rounded-circle {
        object-fit: cover;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    /* Layout adjustments for better mobile responsiveness */
    @media (max-width: 576px) {
        .location-card {
            margin-bottom: 15px;
        }
    }
