<section class="suggestions-container">
    <h3 class="suggestion-title">Suggestions & Reviews</h3>
    {{#if suggestion}}
    <div class="row">
        {{#each suggestion}}
        <div class="col-md-4 mb-4">
            <div class="card suggestion-card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Name: {{this.user}}</h5>
                    <p class="card-text">Comments: {{this.suggestion}}</p>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
    {{/if}}
</section>



<div class="map-container mt-5">
    <iframe src="{{location.google_map_links}}" width="100%" height="500px" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
</div>
