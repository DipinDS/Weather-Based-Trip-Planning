</section>

<section>
    <h3 class="section-title">Winter Activities</h3>
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <img class="fixed-size-image rounded" src="/location-images/Locations/{{location._id}}/{{location._id}}_WindyImage1.jpg" alt="Winter Attraction 1">
            </div>
            <div class="col-md-4">
                <img class="fixed-size-image rounded" src="/location-images/Locations/{{location._id}}/{{location._id}}_WindyImage2.jpg" alt="Winter Attraction 2">
            </div>
            <div class="col-md-4">
                <img class="fixed-size-image rounded" src="/location-images/Locations/{{location._id}}/{{location._id}}_WindyImage3.jpg" alt="Winter Attraction 3">
            </div>
        </div>
        <div class="row actDiv justify-content-between">
